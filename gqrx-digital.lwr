description: GQRX as a frontend for digital receivers
inherit: empty
category: application
configure: 'qmake -project -recursive BOOST_SUFFIX= INCLUDEPATH="../../gr-dsd/dsd $prefix/include/osmo-tetra
  $prefix/include/dsd $prefix/include ../../osmo-tetra/src" DEPENDPATH="$prefix/lib
  $prefix/include/dsd" LIBS+="-Xlinker -zmuldefs" ||
  qmake-qt4 -project -recursive BOOST_SUFFIX= INCLUDEPATH="../../gr-dsd/dsd $prefix/include/osmo-tetra
  $prefix/include/dsd $prefix/include ../../osmo-tetra/src" DEPENDPATH="$prefix/lib
  $prefix/include/dsd" LIBS+="-Xlinker -zmuldefs"
  '
depends:
- gnuradio
- gr-osmosdr
- pulseaudio
- qt4
- qt5
- libosmocore
- osmo-tetra
- libshout
- gr-dsd
gitbranch: digital
install:  |
  mv gqrx gqrx-digital
  cp gqrx-digital $prefix/bin/
make: "make -j$makewidth"
uninstall: rm $prefix/bin/gqrx-digital
source: git+https://github.com/kantooon/gqrx_fork.git
